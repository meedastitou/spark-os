{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "hpl-scanner",
    "title": "Scanner",
    "headerTemplate": "{{self.info.name}}",
    "type": "object",
    "required": [
        "info",
        "variables"
    ],
    "properties": {
        "info": {
            "$ref": "#/definitions/hpl/definitions/info"
        },
        "variables": {
            "title": "Variables",
            "description": "Array of variables to use for the scanner data",
            "type": "array",
            "format": "tabs",
            "minItems": 1,
            "items": {
                "headerTemplate": "{{self.name}}",
                "defaultProperties": [
                    "name",
                    "description"
                ],
                "allOf": [{
                    "$ref": "#/definitions/hpl/definitions/variable"
                }]
            }
        }
    }
}
